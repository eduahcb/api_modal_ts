{
	"compilerOptions": {
		"lib": ["es2020"],
    "moduleResolution": "Node",
		"noImplicitAny": false,
		"removeComments": true,
		"target": "ES2020",
		"strict": true,
		"esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}